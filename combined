  <div class="nav-bar">
    <button onclick="showSection('home')">Home</button>
    <button onclick="showSection('ordering')">Ordering</button>
    <button onclick="showSection('rules')">Rules</button>
    <button onclick="showSection('login')">Login</button>
    <button onclick="showSection('signup')">Signup</button>
    <button onclick="openSettings()">Settings</button> <!-- Settings Button -->
  </div>

  <button class="toggle-dark-mode" onclick="toggleDarkMode()">Toggle Dark Mode</button>

